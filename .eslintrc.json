{
  "env": {
    "es6": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "rules": {
    "dot-notation": 1,
    "valid-typeof": 2,
    "no-undef": "off"
  },
  "overrides": [
    {
      "files": ["*.jsx", "*.js"]
    }
  ]
}
